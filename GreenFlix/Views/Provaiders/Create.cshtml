@model BecomeProvaiderFormModel

@{
    ViewBag.Title = "Become Provaider";
}
<div class="container">
    <div class="row">
        <div class="offset-md-2 col-md-8 col-sm-12">

            <h2 class="heading-mergin text-center">@ViewBag.Title</h2>

            <form method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="...">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="+49 173..">
                    <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
                </div>


                <input class="btn btn-primary mt-4" type="submit" value="Save" />
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}